<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="san.admin.orm.type.user_list" class="San\UserBundle\Form\Type\UserListType">
            <tag name="form.type" alias="san_user_list" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <!-- Form Filter Type -->
        <service id="san.admin.form.filter.type.date" class="San\UserBundle\Form\Type\Filter\DateType">
            <tag name="form.type" alias="san_type_filter_date" />
        </service>

        <service id="san.admin.orm.filter.type.date" class="San\UserBundle\Filter\ORM\DateFilter">
            <tag name="sonata.admin.filter.type" alias="san_orm_date" />
        </service>

        <service id="san.admin.mongodb.filter.type.date" class="San\UserBundle\Filter\MongoDB\DateFilter">
            <tag name="sonata.admin.filter.type" alias="san_mongodb_date" />
        </service>
    </services>

</container>
