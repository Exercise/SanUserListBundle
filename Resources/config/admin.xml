<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="san.admin.user.class">San\UserListBundle\Admin\UserAdmin</parameter>
        <parameter key="san.admin.user_list.class">San\UserListBundle\Admin\UserListAdmin</parameter>
    </parameters>

    <services>
        <service id="san.admin.user" class="%san.admin.user.class%">
            <tag name="sonata.admin" manager_type="" group="User" label="User"/>
            <tag name="san.admin" />
            <argument />
            <argument>%san_user_list.user_class%</argument>
            <argument></argument>
            <call method="setTranslationDomain">
                <argument>SanUserBundle</argument>
            </call>
        </service>

        <service id="san.admin.user_list" class="%san.admin.user_list.class%">
            <tag name="sonata.admin" manager_type="" group="User" label="User List"/>
            <tag name="san.admin" />
            <argument />
            <argument>San\UserListBundle\Entity\UserList</argument>
            <argument>SanUserListBundle:Admin/UserListCRUD</argument>
            <call method="setTranslationDomain">
                <argument>SanUserBundle</argument>
            </call>
            <call method="setUserAdmin">
                <argument type="service" id="san.admin.user" />
            </call>
        </service>
    </services>
</container>
